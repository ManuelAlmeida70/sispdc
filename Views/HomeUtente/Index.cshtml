@model SisPDC.DTOs.UtilizadorDTO

@{
    Layout = "_LayoutUtente";
    ViewData["Title"] = "Pagina principal";
}

<!-- Main Content -->
<div class="container pb-5">
    <!-- Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card quick-action-card shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-calendar-plus quick-action-icon text-primary"></i>
                    <h5 class="card-title">Marcar Consulta</h5>
                    <a asp-action="MarcarConsultaUtente" asp-controller="HomeUtente" class="card-text text-muted small">Agende uma nova consulta</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card quick-action-card shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-clipboard2-pulse quick-action-icon text-success"></i>
                    <h5 class="card-title">Marcar Exame</h5>
                    <p class="card-text text-muted small">Solicite exames médicos</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card quick-action-card shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-file-medical quick-action-icon text-info"></i>
                    <h5 class="card-title">Ver RCU</h5>
                    <p class="card-text text-muted small">Acesse seu histórico</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card quick-action-card shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-hospital quick-action-icon text-warning"></i>
                    <h5 class="card-title">Especialidades</h5>
                    <p class="card-text text-muted small">Explore as especialidades</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Left Column -->
        <div class="col-lg-8">
            <!-- Próximas Consultas -->
            <div class="info-card">
                <h4 class="section-title"><i class="bi bi-calendar-event me-2"></i>Próximas Consultas e Exames</h4>

                <div class="appointment-card p-3 mb-3">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-calendar-check text-primary fs-4 me-3 mt-1"></i>
                                <div>
                                    <h6 class="mb-1 fw-bold">Consulta de Cardiologia</h6>
                                    <p class="mb-1 text-muted small">Dr. João Silva</p>
                                    <p class="mb-0"><i class="bi bi-clock me-1"></i>15 Dez, 2024 às 10:00</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <span class="status-badge bg-success text-white d-inline-block mb-2">Confirmada</span>
                            <div class="btn-group d-block" role="group">
                                <button class="btn btn-sm btn-outline-primary">Detalhes</button>
                                <button class="btn btn-sm btn-outline-danger">Cancelar</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="appointment-card p-3 mb-3">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-clipboard2-pulse text-success fs-4 me-3 mt-1"></i>
                                <div>
                                    <h6 class="mb-1 fw-bold">Análises Clínicas</h6>
                                    <p class="mb-1 text-muted small">Laboratório Central</p>
                                    <p class="mb-0"><i class="bi bi-clock me-1"></i>18 Dez, 2024 às 08:30</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <span class="status-badge bg-warning text-dark d-inline-block mb-2">Pendente</span>
                            <div class="btn-group d-block" role="group">
                                <button class="btn btn-sm btn-outline-primary">Detalhes</button>
                                <button class="btn btn-sm btn-outline-danger">Cancelar</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="appointment-card p-3">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-x-ray text-info fs-4 me-3 mt-1"></i>
                                <div>
                                    <h6 class="mb-1 fw-bold">Radiografia - Tórax</h6>
                                    <p class="mb-1 text-muted small">Serviço de Imagiologia</p>
                                    <p class="mb-0"><i class="bi bi-clock me-1"></i>20 Dez, 2024 às 14:00</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <span class="status-badge bg-success text-white d-inline-block mb-2">Confirmada</span>
                            <div class="btn-group d-block" role="group">
                                <button class="btn btn-sm btn-outline-primary">Detalhes</button>
                                <button class="btn btn-sm btn-outline-danger">Cancelar</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button class="btn btn-primary btn-custom">Ver Todas as Marcações</button>
                </div>
            </div>

            <!-- Resultados Recentes -->
            <div class="info-card">
                <h4 class="section-title"><i class="bi bi-file-earmark-text me-2"></i>Resultados Recentes</h4>

                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1"><i class="bi bi-file-earmark-medical text-primary me-2"></i>Hemograma Completo</h6>
                                <p class="mb-1 text-muted small">Data: 05 Dez, 2024</p>
                            </div>
                            <span class="badge bg-success">Disponível</span>
                        </div>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1"><i class="bi bi-file-earmark-medical text-primary me-2"></i>ECG - Eletrocardiograma</h6>
                                <p class="mb-1 text-muted small">Data: 01 Dez, 2024</p>
                            </div>
                            <span class="badge bg-success">Disponível</span>
                        </div>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1"><i class="bi bi-file-earmark-medical text-primary me-2"></i>Radiografia - Tórax</h6>
                                <p class="mb-1 text-muted small">Data: 28 Nov, 2024</p>
                            </div>
                            <span class="badge bg-warning text-dark">Em Análise</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-lg-4">
            <!-- Estatísticas Pessoais -->
            <div class="row g-3 mb-4">
                <div class="col-6">
                    <div class="stat-card">
                        <i class="bi bi-calendar-check text-primary fs-3"></i>
                        <div class="stat-number">8</div>
                        <p class="mb-0 text-muted small">Consultas</p>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-card" style="border-top-color: var(--success-color);">
                        <i class="bi bi-clipboard2-pulse text-success fs-3"></i>
                        <div class="stat-number" style="color: var(--success-color);">12</div>
                        <p class="mb-0 text-muted small">Exames</p>
                    </div>
                </div>
            </div>

            <!-- Dados Médicos Principais -->
            <div class="info-card">
                <h5 class="section-title small"><i class="bi bi-heart-pulse me-2"></i>Dados Médicos</h5>
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted small">Grupo Sanguíneo:</span>
                        <span class="fw-bold">O+</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted small">Alergias:</span>
                        <span class="fw-bold">Penicilina</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">Última Atualização:</span>
                        <span class="fw-bold small">01 Dez, 2024</span>
                    </div>
                </div>
                <button class="btn btn-outline-primary btn-sm w-100">Atualizar Informações</button>
            </div>

            <!-- Notificações -->
            <div class="info-card">
                <h5 class="section-title small"><i class="bi bi-bell me-2"></i>Notificações</h5>
                <div class="alert alert-info py-2 px-3 mb-2">
                    <small><i class="bi bi-info-circle me-2"></i>Lembrete de consulta amanhã às 10:00</small>
                </div>
                <div class="alert alert-success py-2 px-3 mb-2">
                    <small><i class="bi bi-check-circle me-2"></i>Resultados de exame disponíveis</small>
                </div>
                <div class="alert alert-warning py-2 px-3 mb-0">
                    <small><i class="bi bi-exclamation-triangle me-2"></i>Atualização de vacinas pendente</small>
                </div>
            </div>

            <!-- Seguro de Saúde -->
            <div class="info-card">
                <h5 class="section-title small"><i class="bi bi-shield-check me-2"></i>Seguro de Saúde</h5>
                <div class="mb-2">
                    <span class="text-muted small">Entidade:</span>
                    <p class="mb-1 fw-bold">Médis Seguros</p>
                </div>
                <div class="mb-2">
                    <span class="text-muted small">Número de Beneficiário:</span>
                    <p class="mb-0 fw-bold">123456789</p>
                </div>
            </div>

            <!-- Acesso Rápido -->
            <div class="info-card">
                <h5 class="section-title small"><i class="bi bi-lightning me-2"></i>Acesso Rápido</h5>
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-primary btn-sm"><i class="bi bi-person me-2"></i>Meu Perfil</button>
                    <button class="btn btn-outline-primary btn-sm"><i class="bi bi-clock-history me-2"></i>Histórico Médico</button>
                    <button class="btn btn-outline-primary btn-sm"><i class="bi bi-syringe me-2"></i>Boletim de Vacinas</button>
                    <button class="btn btn-outline-primary btn-sm"><i class="bi bi-file-text me-2"></i>Prescrições</button>
                </div>
            </div>
        </div>
    </div>
</div>