@model SisPDC.Models.Entities.EspecialidadeModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Eliminar Especialidade";
}
@section Styles {
    <link href="~/css/especialidade.css" rel="stylesheet" />
}

<div class="content-wrapper">
    <div class="data-table-card">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="bi bi-dash-circle me-2"></i>Eliminar Especialidade
                </h5>
            </div>
            <div class="card-body">
                <p class="text-danger fw-bold">
                    Tem certeza que deseja eliminar a especialidade
                    <strong class="text-dark">@Model.Descricao</strong>?
                </p>

                <form asp-action="Eliminar" asp-controller="Especialidade" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label" style="font-size: 1.25rem; font-weight: 600;">
                            Descrição da Especialidade
                        </label>
                        <input asp-for="Descricao" type="text"
                               class="form-control border-0 text-dark"
                               style="background: transparent; font-size: 1.25rem; padding: 0.5rem 0.75rem;" />
                    </div>


                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-check-circle me-2"></i>Eliminar
                        </button>
                        <a asp-action="Listar" asp-controller="Especialidade" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
