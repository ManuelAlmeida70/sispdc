@model SisPDC.Models.Entities.EspecialidadeModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Criar Especialidades";
}
@section Styles {
    <link href="~/css/especialidade.css" rel="stylesheet" />
}
<!-- Main content -->
<div class="content-wrapper">
    <div class="data-table-card">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-plus-circle me-2"></i>Adicionar Especialidade
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Criar" asp-controller="Especialidade" method="post">
                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label">Descrição da Especialidade</label><br />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                        <input asp-for="Descricao" type="text"
                               class="form-control"
                               placeholder="Ex: Cardiologia, Pediatria..."/>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle me-2"></i>Salvar
                        </button>
                        <a asp-action="Listar" asp-controller="Especialidade" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>