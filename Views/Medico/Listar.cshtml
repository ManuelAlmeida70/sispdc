@model List<dynamic>


@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Listar Médicos";

    var PessoalClinicoExemplo = new List<dynamic>
    {
       
    };

    // DECISÃO: Usar dados de EXEMPLO se o Model vindo do Controller for NULL ou VAZIO
    var listaAExibir = (Model != null && Model.Any()) ? Model : PessoalClinicoExemplo;
}

@section Styles {
    <link href="~/css/pessoalClinico.css" rel="stylesheet" />
}


<div class="content-wrapper">

    <a asp-action="GerarRelatorioPDF" asp-controller="Medico" class="btn btn-primary text-white" target="_blank">
        <i class="bi bi-file-pdf me-2"></i> Gerar Relatório PDF
    </a>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="data-table-card">
        <div class="table-header">
            <h4><i class="bi bi-people-fill me-2"></i> Lista de Pessoal Clínico</h4>
            <a asp-action="Cadastrar" asp-controller="Medico" class="btn btn-primary mb-3">
                <i class="bi bi-person-plus-fill me-2"></i> Adicionar Pessoal Clínico
            </a>
        </div>
        <div class="table-responsive p-2">
            <table id="especialidade" class="data-table">
                <thead>
                    <tr>
                        <th style="width: 5%;">ID</th>
                        <th style="width: 25%;">Nome</th>
                        <th style="width: 15%;">Cargo / Profissão</th>
                        <th style="width: 20%;">Especialidade</th>
                        <th style="width: 15%;">Telefone</th>
                        <th style="width: 10%;">Ativo</th>
                        <th style="width: 10%;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @* Agora iteramos sobre a variável 'listaAExibir' em vez de 'Model' *@
                    @if (listaAExibir != null && listaAExibir.Any())
                    {
                        foreach (var pessoa in listaAExibir)
                        {
                            <tr>
                                <td>#@pessoa.IdPessoalClinico.ToString("D4")</td>
                                <td>
                                    <strong>@pessoa.Nome</strong>
                                    <br>
                                    <small class="text-muted">@pessoa.Email</small>
                                </td>
                                <td>@pessoa.Cargo</td>
                                <td>@pessoa.EspecialidadeNome</td>
                                <td>@pessoa.Telefone</td>
                                <td>
                                    @if (pessoa.Ativo)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Sim</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-x-circle-fill"></i> Não</span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-action="Editar" asp-controller="Medico"
                                                                 asp-route-id="@pessoa.IdPessoalClinico" class="btn-action btn-edit" title="Editar">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <a asp-action="Eliminar"
                                                                 asp-controller="Medico"
                                                                 asp-route-id="@pessoa.IdPessoalClinico"
                                                                 class="btn-action btn-delete" title="Eliminar">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center" style="padding: 3rem;">
                                <i class="bi bi-hospital" style="font-size: 3rem; color: #ccc;"></i>
                                <p style="margin-top: 1rem; color: #666;">Nenhum membro do Pessoal Clínico cadastrado.</p>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}