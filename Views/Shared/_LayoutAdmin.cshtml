<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Hospital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css" />

    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

    <link href="~/css/style.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="logo-icon">PDC</div>
            <h3>Hospital PDC</h3>
        </div>

        <div class="user-profile">
            <img src="https://ui-avatars.com/api/?name=Dr+Admin&background=1e88e5&color=fff&size=200" alt="Admin">
            <h5>Mazunga</h5>
            <p>P. administrativa</p>
        </div>

        <div class="sidebar-menu">
            <a asp-action="Index" asp-controller="Especialidade" class="menu-item active">
                <i class="bi bi-speedometer2"></i>
                <span>Principal</span>
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-people"></i>
                <span>Pacientes</span>
            </a>
            <a asp-action="Listar" asp-controller="Medico" class="menu-item">
                <i class="bi bi-person-badge"></i>
                <span>Médicos</span>
            </a>
            <a asp-action="Listar" asp-controller="Administrativa" class="menu-item">
                <i class="bi bi-person-badge"></i>
                <span>P. administrativa</span>
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-calendar-check"></i>
                <span>Consultas</span>
            </a>
            <a asp-action="Listar" asp-controller="Especialidade" class="menu-item">
                <i class="bi bi-collection"></i>
                <span>Especialidade</span>
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-clipboard-pulse"></i>
                <span>Exames</span>
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-capsule"></i>
                <span>Farmácia</span>
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-cash-stack"></i>
                <span>Faturamento</span>
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-file-earmark-text"></i>
                <span>Relatórios</span>
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-gear"></i>
                <span>Configurações</span>
            </a>
        </div>
    </div>

    <!-- Top Bar -->
    <div class="top-bar">
        <div class="search-box">
            <i class="bi bi-search"></i>
            <input type="text" placeholder="Buscar pacientes, médicos, consultas...">
        </div>
        <div class="top-bar-actions">
            <button class="notification-btn">
                <i class="bi bi-bell"></i>
                <span class="badge">5</span>
            </button>
            <div class="user-info">
                <img src="https://ui-avatars.com/api/?name=Admin&background=1e88e5&color=fff&size=100" alt="User">
                <div>
                    <div style="font-size: 14px; font-weight: 600;">Admin</div>
                    <div style="font-size: 12px; color: #666;">Administrador</div>
                </div>
            </div>
        </div>
    </div>

    @RenderBody()

    <!-- jQuery (DEVE ser carregado primeiro) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS -->
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap5.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>


