@using System.Security.Claims

@{
    var IdUtilizador = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    var tipoUtilizador = User.FindFirst(ClaimTypes.Role)?.Value ?? "Utente";
    var email = User.FindFirst(ClaimTypes.Email)?.Value ?? "";
    var nome = User.FindFirst(ClaimTypes.Name)?.Value ?? "";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Hospital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css" />

    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

    <link href="~/css/style.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="logo-icon">PDC</div>
            <h3>Hospital PDC</h3>
        </div>

        <div class="user-profile">
            <img src="https://ui-avatars.com/api/?name=Dr+Admin&background=1e88e5&color=fff&size=200" alt="Utente">
            <h5>@nome</h5>
            <p>@tipoUtilizador</p>
        </div>

        <div class="sidebar-menu">
            <a asp-action="Index" asp-controller="Utente" class="menu-item active">
                <i class="bi bi-speedometer2"></i>
                <span>Principal</span>
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-people"></i>
                <span>Consulta</span>
            </a>
            <a asp-action="Exame" asp-controller="Utente" class="menu-item">
                <i class="bi bi-person-badge"></i>
                <span>Exames</span>
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-calendar-check"></i>
                <span>Consultas</span>
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-clipboard-pulse"></i>
                <span>Exames</span>
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-capsule"></i>
                <span>Farmácia</span>
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-file-earmark-text"></i>
                <span>Relatórios</span>
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-gear"></i>
                <span>Configurações</span>
            </a>
        </div>
    </div>

    <!-- Top Bar -->
    <div class="top-bar">
        <div class="search-box">
            <i class="bi bi-search"></i>
            <input type="text" placeholder="Buscar pacientes, médicos, consultas...">
        </div>
        <div class="top-bar-actions">
            <button class="notification-btn">
                <i class="bi bi-bell"></i>
                <span class="badge">5</span>
            </button>
            <div class="user-info">
                <a asp-action="TerminarSessao" asp-controller="Login">
                    <img src="https://ui-avatars.com/api/?name=Admin&background=1e88e5&color=fff&size=100" alt="User">
                </a>
                <div>
                    <div style="font-size: 14px; font-weight: 600;">@email</div>
                    <div style="font-size: 12px; color: #666;">@tipoUtilizador</div>
                </div>
            </div>
        </div>
    </div>

    @RenderBody()

    <!-- jQuery (DEVE ser carregado primeiro) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS -->
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap5.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>


