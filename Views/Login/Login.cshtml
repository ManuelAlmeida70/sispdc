@model SisPDC.DTOs.UtilizadorDTO

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sessão | Sistema Hospitalar</title>
    <!--<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">-->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLMDJ87tFpWJofv8S4/kP1s0qP+T8B7JpP1fD2yM6N6G/MvL1x0TqQ2R+h0F0F0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* Estilos Personalizados */
        body {
            background-color: #f0f8ff;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Arial, sans-serif;
        }

        .login-card {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
            max-width: 450px;
            width: 90%;
        }

        h2 {
            color: #0d6efd;
            font-weight: 700;
        }

        /* Estilo para os Botões de Rádio (Tipo de Utilizador) */
        .tipo-utilizador-radio .btn {
            text-align: center;
            padding: 10px 5px;
            border: 1px solid #dee2e6;
            color: #212529;
            transition: all 0.2s;
            font-weight: 600;
            font-size: 0.9em;
            height: 100%;
        }

        .tipo-utilizador-radio input[type="radio"]:checked + .btn {
            background-color: #e7f1ff;
            border-color: #0d6efd;
            color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .tipo-utilizador-radio .btn i {
            display: block;
            margin-bottom: 3px;
            font-size: 1.3em;
        }

        /* Estilo para centralizar o label "Entrar como" */
        .tipo-utilizador-container .form-label {
            text-align: center;
            width: 100%;
        }

        .btn-primary {
            font-weight: 600;
        }

        /* Links adicionados e estilizados */
        .password-links-container {
            display: flex;
            justify-content: space-between; /* Distribui os links nas extremidades */
            margin-top: -10px;
            margin-bottom: 20px;
            font-size: 0.9em;
        }

        /* NOVO ESTILO: Garante que o link de Criar Conta está escondido por padrão */
        .hidden-default {
            display: none;
        }

    </style>
</head>
<body>

    <div class="login-card">
        <h2 class="text-center mb-4">🏥 Acesso ao Sistema</h2>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-4" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="IniciarSessao" asp-controller="Login" method="POST">

            <div class="mb-5 tipo-utilizador-container">
                <label class="form-label d-block mb-3">**Entrar como:**</label>

                <div class="row g-2 tipo-utilizador-radio">

                    <div class="col-12 col-md-4">
                        <input type="radio" class="btn-check" asp-for="TipoUtilizador" id="option_utente" value="Utente" onclick="toggleCreateAccountLink('show')">
                        <label class="btn w-100" for="option_utente">
                            <i class="fa-solid fa-user"></i> Utente
                        </label>
                    </div>

                    <div class="col-12 col-md-4">
                        <input type="radio" class="btn-check" asp-for="TipoUtilizador" id="option_medico" value="Medico" onclick="toggleCreateAccountLink('hide')">
                        <label class="btn w-100" for="option_medico">
                            <i class="fa-solid fa-user-doctor"></i> Médico
                        </label>
                    </div>

                    <div class="col-12 col-md-4">
                        <input type="radio" class="btn-check" asp-for="TipoUtilizador" id="option_admin" value="Administrativa" onclick="toggleCreateAccountLink('hide')">
                        <label class="btn w-100" for="option_admin">
                            <i class="fa-solid fa-gears"></i> Admin
                        </label>
                    </div>
                    <span asp-validation-for="TipoUtilizador" class="text-danger text-center"></span>
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Endereço de Email</label><br />
                <span asp-validation-for="Email" class="text-danger"></span>
                <input type="email" class="form-control" id="email" asp-for="Email" placeholder="seu.email@exemplo.com">
            </div>

            <div class="mb-4">
                <label for="password" class="form-label">Palavra-Passe</label><br />
                <span asp-validation-for="Password" class="text-danger"></span>
                <input type="password" class="form-control" id="password" asp-for="Password" placeholder="••••••••">
            </div>

            <div class="password-links-container">
                <a asp-action="CriarContaUtente" asp-controller="Login" class="text-decoration-none text-success hidden-default" id="createAccountLink">
                    <i class="fa-solid fa-user-plus"></i> Criar Conta
                </a>

                <a href="/recuperar-senha" class="text-decoration-none text-primary" id="forgotPasswordLink">
                    Esqueci minha palavra-passe
                </a>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Iniciar sessão</button>
            </div>

        </form>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Função para mostrar ou esconder o link de criação de conta
        function toggleCreateAccountLink(action) {
            const createLink = document.getElementById('createAccountLink');

            if (action === 'show') {
                // Remove a classe 'hidden-default' para MOSTRAR o link
                createLink.style.display = 'block';

            } else if (action === 'hide') {
                // Adiciona 'hidden-default' ou simplesmente esconde
                createLink.style.display = 'none';
            }
        }

        // Garante que o estado inicial é 'escondido' quando a página carrega
        document.addEventListener('DOMContentLoaded', () => {
             toggleCreateAccountLink('hide');
        });
    </script>
</body>
</html>